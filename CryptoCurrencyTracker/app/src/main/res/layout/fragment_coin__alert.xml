<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Select Coin :"
                android:layout_weight="1"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/coin_alert_coins_spin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/Coin_Array"
                android:padding="16dp"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Set Alert Frequency :"
                android:layout_weight="1"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/coin_alert_freq_spin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/Alert_Frequency_Array"
                android:layout_weight="1"
                android:padding="16dp"></Spinner>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Set Alert Time :"
                android:textSize="16dp"
                />

        </LinearLayout>

        <TimePicker
            android:id="@+id/coin_alert_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numbersBackgroundColor="@android:color/darker_gray"
            android:numbersInnerTextColor="@android:color/black"
            android:numbersSelectorColor="@android:color/primary_text_light"
            android:numbersTextColor="@android:color/white"
            android:headerBackground="@android:color/darker_gray"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="80dp"
            ></TimePicker>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/coin_alert_save_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="16dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_margin="16dp"
                />

            <Button
                android:id="@+id/coin_alert_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="16dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_margin="16dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>