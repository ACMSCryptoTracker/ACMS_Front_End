<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Select Coin :"
                android:layout_weight="1"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/high_low_alert_coins_spin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/Coin_Array"
                android:layout_weight="1"
                android:padding="16dp"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Current Price :"
                android:layout_weight="1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/high_low_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1899"
                android:hint="$179"
                android:layout_weight="1"
                android:padding="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Set High Limit :"
                android:layout_weight="1"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_high_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="1091 (in $)"
                android:padding="16dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Set Low Limit :"
                android:layout_weight="1"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/edit_low_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="100 (in $)"
                android:padding="16dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/hl_save_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="16dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_margin="16dp"
                />

            <Button
                android:id="@+id/hl_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="16dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_margin="16dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>