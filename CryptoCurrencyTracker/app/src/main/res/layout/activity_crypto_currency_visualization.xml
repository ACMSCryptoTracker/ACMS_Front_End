<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CryptoCurrencyVisualization">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:id="@+id/text_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="$1.12"/>
            <TextView
                android:id="@+id/text_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="$1.12"/>
            <Spinner
                android:id="@+id/spin_visual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:layout_weight="1.5"
                android:entries="@array/Change_Array_Values"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp"/>

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:src="@drawable/ic_menu_camera"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MARKET DATA:"
            android:padding="16dp"
            android:textSize="18dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Market Cap :"
                android:layout_weight="1"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/text_marketcap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="$5040380"
                android:layout_weight="1"
                android:textSize="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Volume :"
                android:layout_weight="1"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/text_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="$5040380"
                android:layout_weight="1"
                android:textSize="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp"/>
    </LinearLayout>

</ScrollView>